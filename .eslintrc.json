{
  "extends": [
    "standard",
    "plugin:react/recommended",
    "prettier",
    "prettier/react",
    "prettier/standard"
  ],
  "plugins": ["react", "prettier", "standard"],
  "rules": {
    "no-console": ["error", {
      "allow": ["warn", "error"]
    }],
    "prettier/prettier": [
      "error",
      {
        "printWidth": 120,
        "semi": false
      }
    ]
  },
  "env": {
    "browser": true,
    "mocha": true
  },
  "globals": {
    "escapeHtml": true,
    "sap": true,
    "jQuery": true,
    "$": true,
    "Promise": true,
    "ArrayBuffer": true,
    "Uint8Array": true
  }
}